{
    "label": "Page %{pageNum}",
    "description": "The image to display on page %{pageNum}.",

    "image": {
        "accessibleImageDisplayName": "page %{pageNum} image"
    },

    "removeButton": {
        "ariaLabel": "remove page %{pageNum}",

        "confirmation": {
            "title": "Deletion Confirmation",
            "message": "Are you sure you want to delete page %{pageNum}?",
            "additionalMessage1": "This will remove all page audio recorded for this page.",
            "additionalMessage2": "THIS CANNOT BE UNDONE!"
        }
    },

    "moveUpButton": {
        "ariaLabel": "move page %{pageNum} up"
    },

    "moveDownButton": {
        "ariaLabel": "move page %{pageNum} down"
    },

    "texts": {
        "label": "Text",

        "scanButton": {
            "ariaLabel": "extract text from image for page %{pageNum}",

            "confirmation": {
                "title": "Rescan Page Text",
                "message": "Are you sure that you want to scan the image for text and replace your existing page text?"
            }
        },

        "addButton": {
            "ariaLabel": "add new text to page %{pageNum}",

            "confirmation": {
                "title": "Set Page Text",
                "message": "What is the page text?",
                "inputAriaLabel": "text to add to page %{pageNum}",
                "inputPlaceholder": "text to add"
            }
        },

        "removeButton": {
            "ariaLabel": "remove the text \"%{pageText}\" from page %{pageNum}",

            "confirmation": {
                "title": "Deletion Confirmation",
                "message": "Are you sure you want to delete this page text?"
            }
        },

        "changePageTextButton": {
            "ariaLabel": "edit the text \"%{pageText}\" from page %{pageNum}",

            "confirmation": {
                "title": {
                    "noPageText": "Set Page Text",
                    "withPageText": "Update Page Text"
                },

                "message": {
                    "noPageText": "What is the page text?",
                    "withPageText": "What would you like to change the page text to?"
                },

                "inputPlaceholder": "text to add",

                "inputAriaLabel": {
                    "noPageText": "text to add to page %{pageNum}",
                    "withPageText": "text to update on page %{pageNum}"
                }
            }
        },

        "showHideButton": {
            "ariaLabel": {
                "hidden": "show the text \"%{pageText}\" from page %{pageNum}",
                "visible": "hide the text \"%{pageText}\" from page %{pageNum}"
            }
        },

        "moveUpButton": {
            "ariaLabel": "move the text \"%{pageText}\" from page %{pageNum} up"
        },

        "moveDownButton": {
            "ariaLabel": "move the text \"%{pageText}\" from page %{pageNum} down"
        }
    },

    "readers": {
        "label": "Readers",

        "reader": {
            "label": "%{readerDisplayName}",

            "description": {
                "noDisplayName": "The audio to play when this reader is reading page %{pageNum}.",
                "withDisplayName": "The audio to play when \"%{readerDisplayName}\" is reading page %{pageNum}."
            },

            "accessibleAudioDisplayName": "page %{pageNum} %{readerDisplayName} reader"
        }
    }
}
